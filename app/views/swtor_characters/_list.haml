- characters.each do |character|
  %li.swtor.character
    %h3= link_to_if (can? :update, character), shorten_words(character.name,11), edit_swtor_character_path(character)
    .avatar= image_tag character.avatar_url :small
    %dl.attributes
      - if defined? show_game and !!show_game
        %dt Game
        %dd= character.game_name
      %dt Level
      %dd= character.level
      %dt Species
      %dd= character.species
      %dt Class
      %dd= character.advanced_class