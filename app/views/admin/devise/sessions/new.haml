- title 'Sign in'

%h1 Admin Login

= simple_form_for(resource, as: resource_name, url: session_url(resource_name, subdomain: "secure", protocol: (Rails.env.development? ? "http://" : "https://"))) do |f|
  %fieldset
    %ol
      = f.input :email, label: false, placeholder: 'Email'
      = f.input :password, label: false, placeholder: 'Password'
      %li.submit
        %button{ type: 'submit' } Login
  %p.help
    %a.help{ onclick: "javascript:$('#body').addClass('with-help');" } Need help?

.help
  %h1 Account Assitance
  %a.close{ onclick: "javascript:$('#body').removeClass('with-help');" } Close
  = render "devise/shared/links"

:javascript
  jQuery(document).ready(function($){ $('#admin_user_email').focus(); });