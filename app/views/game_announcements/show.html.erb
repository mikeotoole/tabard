<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @game_announcement.name %>
</p>

<p>
  <b>Body:</b>
  <%= @game_announcement.body %>
</p>

<p>
  <b>Game:</b>
  <%= render @game %>
</p>

<h5>Comments</h5>
<ul>
  <% @game_announcement.comments.each do  |comment| %>
    <%= render comment %>
  <% end %>
</ul>

<h5>New Comment</h5>
  <%= render( :file => 'comments/new.html.erb', :locals => {:commentable => @game_announcement, :user_profile_id => current_user.user_profile_id, :character_id => (character_active? ? current_character.id : nil)}) %>

<p>
  <b>Acknowledgments:</b>
  <table>
  <tr>
    <th>Character Name</th>
    <th>Acknowledged</th>
  </tr>

<% @acknowledgments.each do |ack| %>
  <tr>
    <td><%= ack.displayname %></td>
	<td><%= ack.acknowledged %></td>
  </tr>
<% end %>
</table>
</p>

<%= link_to 'Edit', edit_game_announcement_path(@game_announcement) %> |
<%= link_to 'Game Announcements', game_announcements_path %> |
<%= link_to 'All Announcements', announcements_path %>
