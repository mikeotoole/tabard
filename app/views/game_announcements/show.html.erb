<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @game_announcement.name %>
</p>

<p>
  <b>Body:</b>
  <%= @game_announcement.body %>
</p>

<p>
  <b>Game:</b>
  <%= render @game %>
</p>

<h5>Comments</h5>
<div class="comments">
  <% @game_announcement.comments.each do  |comment| %>
    <%= render comment %>
  <% end %>
</div>
<%= link_to "New Comment", new_comment_path(:format => :js, :commentable_id => @game_announcement.id, :commentable_type => @game_announcement.class), :remote => true, :class => 'new_comment_link' %>

<p>
  <b>Acknowledgments:</b>
  <table>
  <tr>
    <th>Character Name</th>
    <th>Acknowledged</th>
  </tr>

<% @acknowledgments.each do |ack| %>
  <tr>
    <td><%= ack.displayname %></td>
	<td><%= ack.acknowledged %></td>
  </tr>
<% end %>
</table>
</p>

<%= link_to 'Edit', edit_game_announcement_path(@game_announcement) %> |
<%= link_to 'Game Announcements', game_announcements_path %> |
<%= link_to 'All Announcements', announcements_path %>
