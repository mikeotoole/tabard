<h1>Listing Game Announcements</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Game</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game_announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.name %></td>
    <td><%= announcement.body %></td>
    <td><%= Game.find(announcement.game_id).name %></td>
    <td><%= link_to 'Show', announcement %></td>
    <td><%= link_to 'Edit', edit_game_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', announcement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

