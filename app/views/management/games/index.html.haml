%p#bcrumb
  = link_to 'Management', management_path
  %span Games

%h1 Games Management

%table
  %tbody
    - @games.each do |game|
      %tr
        %td.name
          = link_to game.name, game
        %td.edit
          = link_to "Edit", edit_management_game_path(game), :class => 'edit', :title => 'Edit'
          = link_to "Delete", [:management, game], :confirm => "Are you sure?", :method => :delete, :class => 'delete', :title => 'Delete'
  %tfoot
    %tr
      %td{ :colspan => 2 }
        = link_to 'New Game', new_management_game_path, :class => 'button'