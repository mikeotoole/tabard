  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.is_active %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_management_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:management, user], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

