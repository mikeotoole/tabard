= form_for [:management, @discussion_space] do |f|
  - if @discussion_space.errors.any?
    #error_explanation
      %h2
        = pluralize(@discussion_space.errors.count, "error")
        prohibited this discussion_space from being saved:
      %ul
        - @discussion_space.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :game_id
    %br/
    = f.collection_select(:game_id, Game.where("is_active = ?", true), :id, :name, options ={:prompt => "Select an optional game", :include_blank => true}, :class =>"game")
  .actions
    = submit_or_cancel(f)
