%p#notice= notice
%p
  %b Name:
  = @site_form.name
%p
  %b Welcome Message:
  = @site_form.message
%p
  %b Thank You Message:
  = @site_form.thankyou
%p
  %b Published:
  = @site_form.published
%p
  %b Notifications Sent To:
  - if !@site_form.profile_notifications.empty?
    - @site_form.profile_notifications.each do  |profile|
      = render :partial => "user_profiles/profile_simple" , :locals => { :profile => profile }
  - else
    None
  
#questions
  %b Questions:
  - @site_form.questions.each do  |question|
    = render question
%h5 New Question
= form_tag( new_question_path(:format => :js), :remote => true, :class => 'new_question_link', :method => 'get')
= hidden_field_tag(:site_form_id, @site_form.id )
= select_tag(:q_type, options_for_select(Question::select_options))
= submit_tag 'Add Question'
%br/
= link_to 'Edit', edit_management_site_form_path(@site_form)
|
\#{link_to 'Back', management_site_forms_path}
