%p#bcrumb
  = link_to 'Locations', locations_path
  %span= @location.name

#page
  %h1= @location.name
  
  %p#actions
    - if logged_in?
      - if current_user.can_update(@location)
        = link_to 'Edit', edit_location_path(@location), :class => 'edit', :title => 'Edit Location'
      - if current_user.can_delete(@location)
        = link_to 'Delete', @location, :method => 'delete', :confirm => 'Are you sure?', :class => 'delete', :title => 'Delete Location'