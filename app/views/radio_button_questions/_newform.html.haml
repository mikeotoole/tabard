= form_for(@radio_button_question, :remote => true) do |f|
  = f.hidden_field :site_form_id
  %h2 New Radio Button Question
  %p{ :class => 'question field' }
    = f.label :content, "Question"
    = f.text_area :content, :rows => 3
  .answers
    %dl
      %dt
        %label Answers Choices
      = f.fields_for :predefined_answers do |builder|
        %dd
          = render 'predefined_answer_fields', :f => builder
    %p
      = link_to_add_fields "Add Answer", f, :predefined_answers, "'.answers dl dd:last'", '<dd>', '</dd>', { :class => 'button' }
  %p
    %button{ :type => 'submit' } Save New Question
    or
    = link_to 'Cancel', 'javascript:;', :class => 'new_question_cancel'