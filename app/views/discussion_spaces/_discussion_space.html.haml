= div_for discussion_space do
  %h3= discussion_space.name
  - if !discussion_space.system
    %p
      Created By: #{discussion_space.user_profile_name}
  - if !discussion_space.system
    %span.actions
    %td= (logged_in? and current_user.can_update(discussion_space)) ? link_to( 'Edit', edit_discussion_space_path(discussion_space)) : "No Edit Permissions"
    %td= (logged_in? and current_user.can_delete(discussion_space)) ? link_to( 'Delete', discussion_space, :confirm => 'Are you sure?', :method => :delete) : "No Delete Permissions"
  %span.actions
    = (logged_in? and current_user.can_create("Discussion") || current_user.can_create(discussion_space)) ? link_to( 'New Discussion', new_discussion_path(:discussion_space => discussion_space)) : "No permissions to create a new discussion"
  %h4 Active Discussions
  %ul
    - discussion_space.discussions.each do |discussion|
      %li
        = link_to discussion.name, discussion
        | #{discussion.number_of_comments} comments
