<%= div_for discussion_space do %>
  <h3><%= discussion_space.name %></h3>
  <% if !discussion_space.system %>
    <p>Created By: <%= discussion_space.user_profile_name %></p>
  <% end %>
  <% if !discussion_space.system %>
    <span class='actions'>
      <td><%= (logged_in? and current_user.can_update(discussion_space)) ? link_to( 'Edit', edit_discussion_space_path(discussion_space)) : "No Edit Permissions" %></td>
      <td><%= (logged_in? and current_user.can_delete(discussion_space)) ? link_to( 'Delete', discussion_space, :confirm => 'Are you sure?', :method => :delete) : "No Delete Permissions" %></td>
    </span>
  <% end %>
  <h4>Active Discussions</h4>
  <ul>
    <% discussion_space.discussions.each do |discussion| %>
      <li><%= link_to discussion.name, discussion %> | <%= discussion.number_of_comments %> comments</li>
    <% end %>
  </ul>
<% end %>
