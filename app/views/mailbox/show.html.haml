%table
  %caption
    %h1= h @folder.name
  - if @messages.size > 0
    %thead
      %tr
        %th.name From
        %th.subject Subject
        %th.date Received
    %tbody
      - for message in @messages
        %tr
          %td= h message.author.name
          %td= link_to h(message.subject), message_path(message)
          %td= distance_of_time_in_words(message.created_at, Time.now) + ' ago'
  - else
    %tbody
      %tr
        %td{ :colspan => 3 } No messages.
  %tfoot
    %tr
      %td{ :colspan => 3 }
