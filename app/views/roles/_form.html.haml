= form_for @role do |f|
  -if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :community_id
    = f.number_field :community_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :system_generated
    = f.check_box :system_generated
  .actions
    = f.submit 'Save'
