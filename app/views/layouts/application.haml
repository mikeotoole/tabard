!!!
%html
  %head
    %title= raw yield_for(:title, 'Crumblin™')
    = stylesheet_link_tag "/stylesheets/din.css"
    = stylesheet_link_tag "/stylesheets/eurostyle.css"
    = stylesheet_link_tag "top_level/top_level"
    = javascript_include_tag "application", "top_level"
    = csrf_meta_tags unless @page_caching
    = favicon_link_tag asset_path 'favicon.png'

  %body{ class: "#{params[:controller].gsub(/\//,' ')} #{params[:action]} #{current_community ? '' : 'top_level'}" }
    #bar
      = link_to 'Crumblin™', root_url(subdomain: false), class: 'logo'
      = link_to 'load', bar_url(subdomain: false, format: :js), remote: true, class: 'dynload', 'data-type' => 'text', 'data-target' => '#bar'
    = render 'layouts/flash_messages' unless @page_caching
    #content
      = yield
    = render 'layouts/footer', current_layout: 'application'