!!! XML
!!! Strict
%html{:dir => "ltr", :lang => "en-US", "xml:lang" => "en-US", :xmlns => "http://www.w3.org/1999/xhtml"}
  %html
    %head
      %title Bv
      = stylesheet_link_tag '/themes/' << current_theme << '/stylesheets/master.css'
      = javascript_include_tag :defaults
      = csrf_meta_tag
    %body
    
      #header
        .container
          .title= link_to "BV", root_path
          .slogan We need a slogan
          -#user_bar
            - if logged_in?
              - if current_user.user_profile == nil
                Please Click #{link_to "Here", new_profile_path} to Finish Creating Your Account |
              - else
                Hello, #{current_user.user_profile.name} |
                - if profile_active?
                  - if character_active?
                    [#{current_character.name}]
                  = current_profile.name
                  = link_to "Deactivate Profile", deactivate_profile_path
                  |
                - else
                  = render :partial => "active_profile/form", :locals => {:current_user => current_user }
                  |
                = link_to "Edit User", edit_user_path(current_user)
                |
              = link_to "Logout", logout_path
            - else
              = link_to "Login", login_path
              
      - if notice.present? || alert.present?
        #messages
          .container
            = content_tag :p, notice, :class => 'notice' if notice.present?
            = content_tag :p, alert, :class => 'alert' if alert.present?
          
      .container
      
        #menu
          = form_tag(session_path, :id => 'login') do
            .field
              = label_tag :email
              = text_field_tag :email
            .field
              = label_tag :password
              = password_field_tag :password
            .actions
              = submit_tag 'Login'
          %ul
            %li
              = link_to 'Info', '#'
              = link_to 'Events', '#'
              = link_to 'Resources', '#'
              = link_to 'Discussion', '#'
              
        #body
          = yield
