#bar
  = link_to 'Crumblin', root_url(:subdomain => false), :class => 'logo'

  %ul.menu
    %li
      = link_to 'Explore', crumblin_intro_url(:subdomain => false)
      %ul
        %li= link_to 'Introduction', crumblin_intro_url(:subdomain => false)
        %li= link_to 'Features', crumblin_features_url(:subdomain => false)
        %li= link_to 'Pricing', crumblin_pricing_url(:subdomain => false)
    %li
      = link_to 'Games', '#'
      - if active_games.size > 0
        %ul
          - active_games.each do |game|
            %li= link_to game.name, game_url(game, :subdomain => false)

  %p.signup
    = link_to 'Sign in', new_user_session_url(:protocol => "https://", :subdomain => "secure")
    or
    = link_to 'Sign up', new_user_registration_url(:protocol => "https://", :subdomain => "secure"), :class => 'button'

  -# TODO Doug, connect search to this form once search has been added to the project
  = form_tag('#', :method => "get") do |f|
    - search_term ||= false
    = text_field_tag 'query', search_term ? search_term : '', :title => 'Search'
    = raw("<button type='submit'>Search</button>")
