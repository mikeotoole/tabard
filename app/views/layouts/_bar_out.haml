#bar
  = link_to 'Crumblin', root_url(:subdomain => false), :class => 'logo'

  %ul.menu
    %li
      = link_to 'Explore', top_level_intro_url(:subdomain => false)
      %ul
        %li= link_to 'Introduction', top_level_intro_url(:subdomain => false)
        %li= link_to 'Features', top_level_features_url(:subdomain => false)
        %li= link_to 'Pricing', top_level_pricing_url(:subdomain => false)
    %li
      = link_to 'Communities', communities_url
      %ul
        %li= link_to "World of Warcraft", wows_url(subdomain: false)
        %li= link_to "Star Wars: The Old Republic", swtors_url(subdomain: false)

  %p.signup
    = link_to 'Login', new_user_session_url(:subdomain => "secure", :protocol => (Rails.env.development? ? "http://" : "https://"))
    or
    = link_to 'Sign up', new_user_registration_url(:subdomain => "secure", :protocol => (Rails.env.development? ? "http://" : "https://")), :class => 'button'

  -# TODO Connect search to this form once search has been added to the project
    = form_tag('#', :method => "get") do |f|
      - search_term ||= false
      = text_field_tag 'query', search_term ? search_term : '', :title => 'Search'
      = raw("<button type='submit'>Search</button>")