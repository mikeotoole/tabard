#bar
  = link_to 'Crumblin', user_root_url(:subdomain => false), :class => 'logo'

  %ul.menu
    - if current_user.communities.size > 0
      %li
        %span My Communities
        %ul
          - current_user.communities.each do |community|
            %li= link_to community.name, actual_community_url(community)
          %li.extra
            = link_to 'Join a community', communities_url(:subdomain => false)
    - else
      %li= link_to 'Join a community', communities_url(:subdomain => false)
    -# TODO - Uncomment this section and hookup link once we actually ad the search feature
      %li{ :class => 'icon search' }
        = link_to 'Search', '#'
    %li
      %p
        = link_to "Logout", destroy_user_session_url

  %ul.characters
    %li{ :class => 'icon gear' }
      = link_to "Account", edit_user_registration_url
    %li{ :class => 'icon notice' }
      = link_to "Announcements", announcements_url(:subdomain => false), (current_user.unread_announcements.size > 0 ? { :meta => current_user.unread_announcements.size } : {})
    %li{ :class => 'icon envelope' }
      = link_to "Messages", inbox_url(:subdomain => false), (current_user.unread_messages.size > 0 ? { :meta => current_user.unread_messages.size } : {})
    %li
      =(profile_active? ? link_to(current_profile.name, user_profile_url(current_user)) : link_to('My Profiles', '#'))
      %ul
        -if profiles
          - profiles.each do |profile|
            - unless profile[:is_current]
              %li
                = image_tag profile[:type].find_by_id(profile[:profile_id]).avatar_url(:icon), :class => 'avatar'
                = link_to(active_profile_url(:id => profile[:profile_id], :type => profile[:type]), :method => :post) do
                  = profile[:name]
          %li.extra
            = link_to 'My characters', user_profile_url(current_user) + '#characters'
          - if current_community and user_signed_in? and current_user.is_member?(current_community)
            %li.extra
              = link_to 'Edit my roster', my_roster_assignments_url

  = link_to image_tag(current_profile.avatar_url :tiny), user_profile_url(current_user) + '#characters', :class => 'avatar'
