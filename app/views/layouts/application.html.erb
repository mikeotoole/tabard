<!DOCTYPE html>
<html>
<head>
  <title>Bv</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header"> 
  <h1><%= link_to "BV", root_path %></h1> 
  <div id="user_bar">
    <% if logged_in? %> 
      Hello, <%= current_user.user_profile.name %>
      <%= link_to "Edit User", edit_user_path(current_user) %> | 
      <%= link_to "Logout", logout_path %>
    <% else %> 
      <%= link_to "Login", login_path %>
    <% end %> 
  </div>
</div>
<%= yield %>

</body>
</html>
