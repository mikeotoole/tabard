!!!
%html

  %head
    %title= yield_for(:title, "#{@community.name} - Crumblin")
    = stylesheet_link_tag "community"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    = render 'layouts/bar_' + (user_signed_in? ? 'in' : 'out')
    = render 'layouts/flash_messages'
    
    #content
    
      #header
        .title
          %strong= @community.name
          %cite= @community.slogan
        .menu
          %li
            = link_to 'Dashboard', @community
          %li
            -#TODO Doug - Hookup links
            = link_to 'Topics', '#'
            %ul
              %li= link_to 'Herp', '#'
              %li= link_to 'A Derp', '#'
          %li
            = link_to 'Discussions', discussion_spaces_path
            - if @community.discussion_spaces.size
              %ul
                - @community.discussion_spaces.each do |space|
                  %li= link_to space.name, space
          %li
            -#TODO Doug - Hookup link
            = link_to 'Announcements', '#'
          %li
            -#TODO Doug - Hookup link
            = link_to 'Members', '#'
          %li.settings
            -#TODO Doug - Hookup link
            = link_to 'Community Settings', '#'
            
      #body
        = yield
        
    = render 'layouts/footer'