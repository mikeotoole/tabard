- title 'Sign in'

#body
  %h1 Sign in to Crumblin

  = simple_form_for(resource, :as => resource_name, :url => session_url(resource_name, :subdomain => "secure", :protocol => "https://")) do |f|
    %fieldset
      %ol
        = f.input :email
        = f.input :password
        - if devise_mapping.rememberable?
          = f.input :remember_me, :as => :boolean
        %li
          %button{ :type => 'submit' } Sign in

  = render "devise/shared/links"
