= form_for(@text_box_question, :remote => true) do |f|
  - if @text_box_question.errors.any?
    #error_explanation
      %h2
        = pluralize(@text_box_question.errors.count, "error")
        prohibited this question from being saved:
      %ul
        - @text_box_question.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :site_form_id
  .field
    = f.label :content, "Question"
    %br/
    = f.text_area :content, :rows => 3
  .actions
    = f.submit
