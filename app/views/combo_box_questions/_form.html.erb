<%= form_for(@combo_box_question) do |f| %>
  <% if @combo_box_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@combo_box_question.errors.count, "error") %> prohibited this combo_box_question from being saved:</h2>

      <ul>
      <% @combo_box_question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="fields">
    <p>
      <%= f.label :content, "Question" %><br />
      <%= f.text_area :content, :rows => 3 %>
    </p>
    <% f.fields_for :answers do |builder| %>
      <%= render 'answer_fields', :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Answer", f, :answers %></p>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
