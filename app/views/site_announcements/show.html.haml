%p#bcrumb
  = link_to 'Announcements', :announcements
  = link_to 'Site Announcements', :site_announcements
  %span= @site_announcement.name

#page
  %h1= @site_announcement.name
  
  %p#actions
    = link_to 'Edit', edit_site_announcement_path(@site_announcement), :class => 'edit', :title => 'Edit'
    = link_to 'Delete', @site_announcement, :confirm => 'Are you sure?', :method => :delete, :class => 'delete', :title => 'Delete'
    
    %p#announcement= @site_announcement.body