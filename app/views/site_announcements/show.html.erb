<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @site_announcement.name %>
</p>

<p>
  <b>Body:</b>
  <%= @site_announcement.body %>
</p>

<h5>Comments</h5>
<ul>
  <% @site_announcement.comments.each do  |comment| %>
    <%= render comment %>
  <% end %>
</ul>

<h5>New Comment</h5>
  <%= render( :file => 'comments/new.html.erb', :locals => {:commentable => @site_announcement, :user_profile_id => current_user.user_profile_id, :character_id => (character_active? ? current_character.id : nil)}) %>

<p>
  <b>Acknowledgments:</b>
  <table>
  <tr>
    <th>User Name</th>
    <th>Acknowledged</th>
  </tr>

<% @acknowledgments.each do |ack| %>
  <tr>
    <td><%= ack.displayname %></td>
	<td><%= ack.acknowledged %></td>
  </tr>
<% end %>
</table>
</p>

<%= link_to 'Edit', edit_site_announcement_path(@site_announcement) %> |
<%= link_to 'Site Announcements', site_announcements_path %> |
<%= link_to 'All Announcements', announcements_path %>
