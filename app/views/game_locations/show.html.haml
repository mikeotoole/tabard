%p#bcrumb
  = link_to 'Locations', locations_path
  = link_to 'Game Locations', game_locations_path
  %span= @game_location.name

#page
  %h1= @game_location.name
  
  %p#actions
    - if logged_in? and current_user.can_update(@game_location)
      = link_to 'Edit', edit_game_location_path(@game_location), :class => 'edit', :title => 'Edit Game Location'
    - if logged_in? and current_user.can_delete(@game_location)
      = link_to 'Delete', @game_location, :method => 'delete', :confirm => 'Are you sure?', :class => 'delete', :title => 'Delete Game Location'