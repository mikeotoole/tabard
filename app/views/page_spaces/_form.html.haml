= form_for(@page_space) do |f|
  - if @page_space.errors.any?
    #error_explanation
      %h2
        = pluralize(@page_space.errors.count, "error")
        prohibited this page_space from being saved:
      %ul
        - @page_space.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :game_id
    %br/
    = f.collection_select(:game_id, Game.where("is_active = ?", true), :id, :name, options ={:prompt => "Select a game", :include_blank => true}, :class =>"game")
  .actions
    = submit_or_cancel(f)
