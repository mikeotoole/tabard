=@profile.errors.to_s
=form_for @profile, :html => {:multipart => true} do |f|
  %p.field
    = f.label :name
    = f.text_field :name
  %p.field
    = f.label :avatar, "Avatar"
    = f.file_field :avatar
    = f.label :remote_avatar_url, "or image URL"
    = f.text_field :remote_avatar_url
  = submit_or_cancel(f)