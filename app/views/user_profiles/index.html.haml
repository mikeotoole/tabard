%h1 User Profiles
%table
  %thead
    %tr
      %th.name Name
      %th.edit
  %tbody
    - @profiles.each do |profile|
      %tr
        %td.name
          = link_to profile.name, profile
        %td.edit
          = link_to 'Edit', edit_profile_path(profile), :class => 'edit', :title => 'Edit'
          = link_to 'Delete', profile, :confirm => 'Are you sure?', :method => :delete, :class => 'delete', :title => 'Delete'
  %tfoot
    %tr
      %td{ :colspan => 2 }
        = link_to 'New Profile', profiles_newgame_path, :class => 'button'
