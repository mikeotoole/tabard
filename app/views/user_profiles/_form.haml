= simple_form_for user_profile, :html => {:multipart => true} do |f|
  %fieldset
    %ol
      = f.input :first_name
      = f.input :last_name
      = f.input :display_name, :hint => "#{UserProfile::MAX_NAME_LENGTH} characters max. Required.", :input_html => { :maxlength => UserProfile::MAX_NAME_LENGTH }
      = f.input :title, :hint => "#{UserProfile::MAX_TITLE_LENGTH} characters max. Optional.", :input_html => { :maxlength => UserProfile::MAX_TITLE_LENGTH }
      = f.input :location, :hint => "#{UserProfile::MAX_LOCATION_LENGTH} characters max. Optional.", :input_html => { :maxlength => UserProfile::MAX_LOCATION_LENGTH }
      = f.input :publicly_viewable, :label => "Let others see my profile?"
      = f.input :description, :label => "About me", :wrapper_tag => :p
      %li.avatar{ :class => f.object.errors.any? ? 'field_with_errors' : '' }
        - if !user_profile.avatar_url.to_s or f.object.errors.any?
          = image_tag 'application/avatar@240.png'
        - else
          = image_tag(user_profile.avatar_url :large)
        %br
        = f.input :avatar, :as => :file, :hint => 'Maxium file size of 2mb. GIF, JPG, PNG.'
        = f.input :remote_avatar_url, :label => ' â€” or a link to an image'
    %p.submit
      %button{ :type => 'submit' } Save
