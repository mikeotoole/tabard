= form_for(@page) do |f|
  - if @page.errors.any?
    #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :page_space
    %br/
    = f.collection_select(:page_space_id, PageSpace.all, :id, :name)
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :featured_page
    %br/
    = f.check_box :featured_page
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = submit_or_cancel(f)
