%h1 Listing PENDING! roster_assignments

%table
  %tr
    %th Community profile
    %th Character proxy
    %th Pending
    %th
    %th

  - @roster_assignments.each do |roster_assignment|
    %tr
      %td= roster_assignment.community_profile_id
      %td= roster_assignment.character_proxy_id
      %td= roster_assignment.pending
      %td= button_to 'Approve', approve_roster_assignment_path(roster_assignment), :method => :put
      %td= button_to 'Reject', reject_roster_assignment_path(roster_assignment), :method => :put
%br
