= form_for page_space do |f|
  -if page_space.errors.any?
    #error_explanation
      %h2= "#{pluralize(page_space.errors.count, "error")} prohibited this page_space from being saved:"
      %ul
        - page_space.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
