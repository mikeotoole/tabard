- title "#{@page_space.name} | #{current_community.name}"

#breadcrumb
  %ol
    %li= link_to "Page Spaces", page_spaces_path
    %li
      %span= @page_space.name

- if @pages.any?
  = paginate @pages
  = render "subdomains/pages/table", :page_space => @page_space, :pages => @pages
  = paginate @pages

-else
  %p This page space has no viewable pages.
  - if (can? :create, @page_space.pages.new)
    %p= link_to 'Create a Page', new_page_space_page_path(@page_space), :class => 'button primary'