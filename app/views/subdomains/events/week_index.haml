- title "Events by Week | #{current_community.name}"

= render 'submenu'

%h1 
  = @date.at_beginning_of_week.strftime("%b %e, %Y") + ' â€” ' + @date.at_end_of_week.strftime("%b %e, %Y")

= link_to 'Previous Week', week_events_url(:year => @date.prev_week.year, :week => @date.prev_week.cweek)
= link_to 'Next Week', week_events_url(:year => @date.cweek == 52 ? @date.year+1 : @date.year, :week => @date.next_week.cweek)

- if @events.any?
  = render "table_week", :events => @events

-else
  %p There are no events.
  - if can? :create, Event
    %p= link_to 'New Event', new_event_url, :class => 'button'