- title "Events | #{current_community.name}"

#actions.actions
  - if can? :create, Event
    = link_to 'New Event', new_event_url, :class => 'new', :meta => 'Create a new event'

%h1 Events
= link_to 'List', events_url
= link_to 'Month', month_events_url(:year => Date.today.year, :month => Date.today.month)
= link_to 'Week', week_events_url(:year => Date.today.year, :week => Date.today.cweek)

- if @events.any?
  = paginate @events
  = render "table", :events => @events
  = paginate @events

-else
  %p There are no events.
  - if can? :create, Event
    %p= link_to 'New Event', new_event_url, :class => 'button'
