= simple_form_for discussion_space do |f|
  %pre=YAML::dump(@games_collection)
  %fieldset
    %ul
      = f.input :name, :label => 'Name'
      = f.input :game_id, :label => 'Game', :collection => @games_collection, :as => :radio, :wrapper_html => { :class => 'select' }
    %p.submit
      = f.button :submit, 'Save Changes'