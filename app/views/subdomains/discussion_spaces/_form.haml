= simple_form_for discussion_space do |f|
  %fieldset
    %ol
      = f.input :name, :label => 'Name'
      = f.input :game_id, :label => 'Game', :collection => collection_with_blank(current_community.games), :as => :radio, :wrapper_html => { :class => 'select' }
    %p.submit
      = f.button :submit, 'Save Changes'