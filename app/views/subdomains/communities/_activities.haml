- if activities.any?
  %ol.activities
    = render "activities/activities", activities: activities, community: current_community
  - unless activities.size < activities_count_initial
    %p.submit
      = link_to 'Load more', community_activities_url(format: :js, 'activity[community_id]' => current_community.id, max_items: activities_count_increment), remote: true, 'data-type' => :text, class: 'button more_activites', initial: activities_count_initial, increment: activities_count_increment
- else
  %em No recent activity