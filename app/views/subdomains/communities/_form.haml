= simple_form_for community do |f|
  %fieldset
    %ol
      - if request[:action] == 'new'
        = f.input :name
      = f.input :slogan
      = f.input :is_accepting_members, :as => :boolean, :label => "Currently accepting new members"
      = f.input :email_notice_on_application, :as => :boolean, :label => "Receive Notification for new applications"
      = f.input :is_protected_roster, :as => :boolean, :label => "Roster changes require approval"
      = f.input :is_public_roster, :as => :boolean, :label => "Community roster is viewable to the public"
      = f.simple_fields_for :theme do |af|
        .select= af.input :predefined_theme, :as => :radio, :wrapper => false, :label => false, :collection => Theme::VALID_THEMES, :required => true
        = af.input :background_image, :as => :file
        = image_tag(community.theme_background_image_url)
        = af.input :remote_background_image_url, :as => :string
      %li
        %button{ :type => 'submit' } Save
