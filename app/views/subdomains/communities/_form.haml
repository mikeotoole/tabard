= simple_form_for community do |f|
  %fieldset
    %ol
      - if request[:action] == 'new'
        = f.input :name
      = f.input :slogan
      = f.input :accepting_members, :as => :boolean
      = f.input :email_notice_on_application, :as => :boolean
      = f.input :protected_roster, :as => :boolean
      = f.input :public_roster, :as => :boolean
      %li
        %button{ :type => 'submit' } Save
