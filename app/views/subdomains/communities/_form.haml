= form_for community do |f|
  - if request[:action] == 'new'
    %p
      = f.label :name
      = f.text_field :name
  %p
    = f.label :slogan
    = f.text_field :slogan
  %p
    = f.check_box :accepting_members
    = f.label :accepting_members
    = f.check_box :email_notice_on_application
    = f.label :email_notice_on_application
    = f.check_box :protected_roster
    = f.label :protected_roster
    = f.check_box :public_roster
    = f.label :public_roster
  %p
    %button{ :type => 'submit' } Save
