- if current_community.discussion_spaces.any?
  %dl
    - current_community.discussion_spaces.each do |space|
      %dt
        %h3= space.name
      %dd
        = f.simple_fields_for :permissions, role.permissions_for_resource(space) do |pf|
          = pf.input :subject_class, :as => :hidden
          .slider_with_none
            = pf.input :_destroy, :as => :boolean, :label => 'Ã—', :wrapper => false, :input_html => { :checked => !pf.object.persisted? }
            = pf.collection_radio :permission_level, [['View', 'View'], ['Update', 'Edit'], ['Delete', 'Delete']], :first, :last, :checked => 'show_p'
        = f.simple_fields_for :permissions, role.nested_permissions_for_resource(space) do |pf|
          = pf.input :subject_class, :as => :hidden
          = pf.input :id_of_parent, :as => :hidden
          = pf.input :parent_association_for_subject, :as => :hidden
          = pf.input :_destroy, :as => :hidden, :input_html => { :checked => !pf.object.persisted? }
          = pf.input :can_create, :as => :boolean, :label => 'Add new discussions', :wrapper => false
          = pf.input :can_destroy, :as => :boolean, :label => 'Delete discussions', :wrapper => false
          = pf.input :can_lock, :as => :boolean, :label => 'Lock/Unlock discussions', :wrapper => false