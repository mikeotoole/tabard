%table
  %thead
    %tr
      %th Name
      %th.actions
  %tbody
    - supported_games.each do |supported_game|
      %tr
        %td
          = link_to supported_game.name, supported_game
          %em= "â€” #{supported_game.game_name}"
        %td.actions
          %div
            - if (can? :update, supported_game)
              = link_to 'Edit', edit_supported_game_path(supported_game), :meta => 'Edit game', :class => 'edit'
  %tfoot
    %tr
      %td{ :colspan => 3 }
        - if can? :create, current_community.supported_games.new
          = link_to 'Add Game', new_supported_game_path, :class => 'button primary'