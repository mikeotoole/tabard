- title "Community Announcements | #{@community.name}"

#breadcrumb
  %ol
    %li= link_to "Announcements", announcements_url(:subdomain => current_community.subdomain)
    %li
      %span Community Announcements

#actions.actions
  - if can? :create, Announcement
    = link_to 'New Announcement', new_announcement_url, :class => 'new', :meta => 'Create a new announcement'

%h1 Community Announcements

= render 'table', :announcements => @announcements