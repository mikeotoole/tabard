= form_for answer do |f|
  -if answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :question_id
    = f.number_field :question_id
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :submission_id
    = f.number_field :submission_id
  .actions
    = f.submit 'Save'
