- title "Adding Game | #{current_community.name}"
- content_for :footer do
  = javascript_include_tag 'community_games'

%h1 Add a Community Game

= simple_form_for @community_game, html: {novalidate: true} do |f|
  %fieldset
    %ol
      = f.input :game_name, input_html:{ data: {autocomplete_source: autocomplete_games_url(subdomain:'www')}}
      = #f.input :game_type, as: :radio_buttons, label: 'Game', collection: Game::VALID_GAMES, wrapper_html: { class: 'game_type select with-label', affects: 'faction server_name server_type' }
      = #render partial: 'shared/affected_dropdown', locals: { f: f, affected_by: 'game_type', affected_by_value: @community_game.game_type, label: 'Server', field: 'server_name', field_value: @community_game.server_name, collection: [['Wow',Wow.all_servers],['Swtor',Swtor.all_servers]] }
      = #render partial: 'shared/affected_dropdown', locals: { f: f, affected_by: 'game_type', affected_by_value: @community_game.game_type, label: 'Faction', field: 'faction', field_value: @community_game.faction, collection: [['Wow',Wow.all_factions],['Swtor',Swtor.all_factions]] }
      = #render partial: 'shared/affected_dropdown', locals: { f: f, affected_by: 'game_type', affected_by_value: @community_game.game_type, label: 'Server type', field: 'server_type', field_value: @community_game.server_type, collection: [['Minecraft', Minecraft.all_server_types]] }
      %li
        %button{ type: 'submit' } Add this game
