- game = SupportedGame.find_by_id(activity.target_id)
- case activity.action
- when 'created'
  Added
  %strong= game.game_name
  - unless current_community and activity.community == current_community
    to
    %strong= link_to activity.community_name, root_url(:subdomain => activity.community_subdomain)
- when 'edited'
  Edited
  %strong= game.game_name
  - unless current_community and activity.community == current_community
    in
    %strong= link_to activity.community_name, root_url(:subdomain => activity.community_subdomain)
