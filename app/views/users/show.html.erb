  <h3>Game Profiles</h3>
  <ul>
    <% @user.game_profiles.each do |gprof| %>
      <li><%= link_to "Show", profile_path(gprof) %></li>
    <% end %>
  </ul>
</div>
<%= link_to 'New Profile', new_profile_path %> |
