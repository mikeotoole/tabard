<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>

<div>
  <h3>User Profile</h3>
  <%= link_to "Show", profile_path(@user.user_profile) %>
