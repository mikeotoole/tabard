= form_for game do |f|
  -if game.errors.any?
    #error_explanation
      %h2= "#{pluralize(game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :is_active
    = f.check_box :is_active
  .actions
    = f.submit 'Save'
