- title @game.name

#body
  %h1= @game.name

  - if @game.communities.size > 0
    = render "communities/communities_table", :communities => @game.communities
  -else
    %p
      This game has no active communities.
      - if (can? :create, Community)
        = link_to 'Create a community', new_community_url(:subdomain => false)