%h1 Games

%table
  - if @games.size > 0
    %thead
      %tr
        %th.amount Players
        %th.name Name
        %th
    %tbody
      - @games.each do |game|
        %tr
          %td.amount
            = game.characters.size.to_s
          %td.name
            = link_to game.name, game
          %td.edit
            - if logged_in? and current_user.can_update(game)
              = link_to "Edit", edit_management_game_path(game), :class => 'edit', :title => 'Edit'
            - if logged_in? and current_user.can_delete(game)
              = link_to "Delete", [:management, game], :confirm => "Are you sure?", :method => :delete, :class => 'delete', :title => 'Delete'
  - else
    %tbody
      %tr
        %td{ :colspan => 3 } There are currently no games.
  %tfoot
    %tr
      %td{ :colspan => 3 }
        - if logged_in? and current_user.can_create(@games)
          = link_to 'Add New Game', new_management_game_path, :class => 'button'