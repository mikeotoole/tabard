= form_for @character, :as => :character, :url => character_path, :html => {:method => :put} do |f|
  - if @character.errors.any?
    #error_explanation
      %h2
        = pluralize(@character.errors.count, "error")
        prohibited this character from being saved:
      %ul
        - @character.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :rank
    %br/
    = f.text_field :rank
  .field
    = f.label :faction
    %br/
    = f.text_field :faction
  .field
    = f.label :race
    %br/
    = f.text_field :race
  .field
    = f.label "Class"
    %br/
    = f.text_field :klass
  .actions
    = submit_or_cancel(f)
