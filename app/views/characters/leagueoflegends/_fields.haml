= f.input :name, label: "Summoner Name"
= f.input :level
= f.input :region, as: :radio_buttons, required: true, label: 'Region', collection: LeagueOfLegends.regions, wrapper_html: { class: 'select with-label'}
%h3 Prefered Champion
- LeagueOfLegends.champion_names.each do |name|
  - next if name.blank?
  - champion_id = name.downcase.parameterize.underscore
  = check_box_tag "character[champions][]", name, character.preferes_champion?(name), id: "champion_#{champion_id}"
  = label_tag "champion_#{champion_id}", name
= f.input :about
%li.avatar{ class: f.object.errors.any? ? 'with-errors' : '' }
  - if !character.persisted? or !character.avatar_url.to_s or f.object.errors.any?
    = image_tag 'application/avatar@240.png'
  - else
    = image_tag(character.avatar_url :large)
  %br
  = f.input :remove_avatar, as: :boolean, label: "Remove avatar", wrapper: false unless character[:avatar].blank?
  = f.input :avatar, wrapper: false, hint: 'Maxium file size of 2mb. GIF, JPG, PNG.'
  = f.input :remote_avatar_url, label: "or image URL", wrapper: false
