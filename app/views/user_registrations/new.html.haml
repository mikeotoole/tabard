- title 'Sign up'

#body
  %h1 Sign up for Crumblin

  - resource.build_user_profile unless resource.user_profile
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %p
      = f.label :email
      %br/
      = f.email_field :email
    =f.fields_for :user_profile do |up_form|
      %p
        = up_form.label :display_name
        %br/
        = up_form.text_field :display_name
    %p
      = f.label :password
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    -unless @user.has_accepted_current_terms_of_service?
      %p
        %p
          =@user.current_terms_of_service.body
        = f.label "Terms of Service"
        = f.check_box :accepted_current_terms_of_service
    -unless @user.has_accepted_current_privacy_policy?
      %p
        %p
          =@user.current_privacy_policy.body
        = f.label "Privacy Policy"
        = f.check_box :accepted_current_privacy_policy
    %p
      %button{ :type => 'submit' } Sign up
  = render "devise/shared/links"
