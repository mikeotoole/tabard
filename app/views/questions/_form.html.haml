= form_for @question do |f|
  -if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :custom_form_id
    = f.number_field :custom_form_id
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :style
    = f.text_field :style
  .actions
    = f.submit 'Save'
