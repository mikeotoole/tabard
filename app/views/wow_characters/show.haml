- if not @wow_character.is_disabled?
  - title "#{@wow_character.name}"

  #body
    %p
      = image_tag(@wow_character.avatar_url)
    %p
      %b Game:
      = @wow_character.wow.name
    %p
      %b Name:
      = @wow_character.name
    %p
      %b Class:
      = @wow_character.char_class
    %p
      %b Race:
      = @wow_character.race
    %p
      %b Level:
      = @wow_character.level
    %p
      %b About:
      = @wow_character.about

    - if can? :edit, @wow_character
      = link_to 'Edit', edit_wow_character_path(@wow_character)
    - if can? :destroy, @wow_character
      = link_to 'Remove', @wow_character, :confirm => 'Are you sure?', :method => :delete
- else
  #body
    %b This character has been removed
