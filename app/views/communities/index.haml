- title "Communities"
#body
  = render 'submenu'
  %h1 All Communities
  #searchbox
    = form_tag communities_url, :method => 'get' do
      = hidden_field_tag :direction, params[:direction]
      = hidden_field_tag :sort, params[:sort]
      %p
        = text_field_tag :search, params[:search]
        %button{ type: 'submit' } Search
  - if @communities.any?
    = paginate @communities
    = render "communities/table", :communities => @communities
    = paginate @communities
  -else
    %p
      There are no active communities.
      - if (can? :create, Community)
        = link_to 'Create a community', new_community_url(:subdomain => false)