<%= div_for comment do %>
  <p>By: <%= comment.user_profile %></p>
  <p>By: <%= comment.character %></p>
  <p>Body: <%= comment.body %></p>
  <p>Item: <%= link_to "Commentable needs a name helper...", comment.commentable %></p>
  <span class='actions'>
    <%= link_to "Edit", edit_comment_path(comment) %>
    <%= link_to "Delete", [comment], :confirm => "Are you sure?", :method => :delete %>
  </span>
<% end %>
