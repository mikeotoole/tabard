<%= form_for([Comment.new]) do |f| %>
  <div class="field"> 
    <%= hidden_field(:comment, :character_id, :value => character_id ) %>
    <%= hidden_field(:comment, :user_profile_id, :value => user_profile_id ) %>
    <%= hidden_field(:comment, :commentable_id, :value => commentable.id) %>
    <%= hidden_field(:comment, :commentable_type, :value => commentable.class ) %> 
  </div>
  <div class="field"> 
    <%= f.label :body %><br /> 
    <%= f.text_area :body %>
  </div> 
  <div class="actions">
    <%= f.submit 'Add Comment' %> 
  </div>
<% end %>
